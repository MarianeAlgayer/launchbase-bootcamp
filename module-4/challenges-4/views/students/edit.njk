{% extends 'layout.njk' %}

{% block head %}
    <title>Tutoring | Students</title>

    <link rel="stylesheet" href="/styles/students.css">
{% endblock head %}

{% block content %}

    <main class="content">
        <section 
            class="avatar" 
            style="filter: grayscale(100%); background: url({{ student.avatar_url }}) no-repeat top center / cover">
        </section>

        <section class="details">
            <form action="/students?_method=PUT" method="POST">
                <h3>Edit</h3>

                {% include 'students/fields.njk' %}

                <input 
                    type="hidden" 
                    name="id" 
                    value="{{ student.id }}"
                >
            </form>

            <form id="form-delete" action="/students?_method=DELETE" method="POST">
                <input 
                    type="hidden" 
                    name="id" 
                    value="{{ student.id }}"
                >

                <button type="submit">Delete</button>
            </form>
            
        </section>
 
    </main>

    {% include 'confirm.njk' %}
    
{% endblock content %}
